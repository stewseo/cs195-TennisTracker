<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>


<BorderPane prefHeight="900.0" prefWidth="1000.0" styleClass="shadow-pane" stylesheets="@../application.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cs195tennis.controller.MatchController">
    <center>
        <VBox id="dragTarget" spacing="10" styleClass="background-pane">
            <HBox alignment="CENTER">
                <padding>
                    <Insets right="5" top="2" />
                </padding>
                <HBox id="left-icons" alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                    <Button onAction="#handleButton3CLick" styleClass="git-button" />
                    <Button onAction="#handleButton4Click" styleClass="exit-button" />
                </HBox>
                <HBox id="right-icons" alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                    <Button onAction="#handleGitButtonClicked" styleClass="git-button" />
                    <Button onAction="#handleExitButtonClicked" styleClass="exit-button" />
                </HBox>
            </HBox>
            <StackPane styleClass="highlight-rectangle">
                <StackPane.margin>
                    <Insets right="11.0" />
                </StackPane.margin>
                <TextField fx:id="searchBox" onAction="#handleSearch" styleClass="transparent">
                    <StackPane.margin>
                        <Insets left="25.0" right="25.0" />
                    </StackPane.margin>
                </TextField>
                <Button mnemonicParsing="false" onAction="#handleClearSearchText" styleClass="delete-button" text="Button" StackPane.alignment="CENTER_RIGHT">
                    <StackPane.margin>
                        <Insets right="23.0" />
                    </StackPane.margin>
                </Button>
                <Button mnemonicParsing="false" styleClass="search-button" text="Button" StackPane.alignment="CENTER_LEFT">
                    <StackPane.margin>
                        <Insets left="9.0" />
                    </StackPane.margin>
                </Button>
                <VBox.margin>
                    <Insets right="14.0" />
                </VBox.margin>
            </StackPane>
            <VBox>
                <TableView fx:id="matchTable" >
                    <columns>
                        <TableColumn fx:id="tourney_nameCol" text="Tournament Name" />
                        <TableColumn fx:id="tourney_dateCol" text="Tournament Date"/>
                        <TableColumn fx:id="winner_nameCol" text="Winner Name"/>
                        <TableColumn fx:id="loser_nameCol" text="Loser Name"/>
                        <TableColumn fx:id="scoreCol" text="Score"/>
                        <TableColumn fx:id="roundCol" text="Round"/>
                        <TableColumn fx:id="matchNumCol" editable="false" text="Match Number"/>
                        <TableColumn fx:id="bestOfCol" editable="false" text="Best of"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
