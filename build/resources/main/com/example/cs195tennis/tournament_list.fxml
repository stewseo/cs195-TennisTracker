<StackPane fx:id="rootPane" stylesheets="@application.css" xmlns="http://javafx.com/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cs195tennis.controller.TournamentListController">
   <children>
       <AnchorPane id="AnchorPane" fx:id="contentPane" prefHeight="525.0" prefWidth="798.0" stylesheets="@application.css">
          <children>
            <TableView fx:id="tableView" prefHeight="400.0" prefWidth="853.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
                <columns>
                    <TableColumn fx:id="tourney_idCol" editable="false" text="tourney_id"/>
                    <TableColumn fx:id="tourney_nameCol" editable="false" text="Tourney Name"/>
                    <TableColumn fx:id="tourney_dateCol" editable="false" text="Tourney Date"/>
                    <TableColumn fx:id="winner_nameCol" editable="false" text="Winner Name"/>
                    <TableColumn fx:id="loser_nameCol" editable="false" text="Loser name"/>
                </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <contextMenu>
                  <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Refresh"/>
                      <MenuItem mnemonicParsing="false" onAction="#handleTournamentEditOption" text="Edit" />
                        <MenuItem mnemonicParsing="false" onAction="#handleBookDeleteOption" text="Delete" />
                    </items>
                     <styleClass>
                        <String fx:value="table-context" />
                        <String fx:value="colored-context-menu" />
                     </styleClass>
                  </ContextMenu>
               </contextMenu>
            </TableView>
            <MenuBar prefHeight="32.0" prefWidth="722.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <menus>
                  <Menu mnemonicParsing="false" text="File">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#exportAsPDF" text="Export as PDF"/>
                        <MenuItem mnemonicParsing="false" onAction="#closeStage" text="Close"/>
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
         </children>
      </AnchorPane>
   </children>
</StackPane>
