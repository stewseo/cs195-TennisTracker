<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXDrawer?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXHamburger?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane prefHeight="900.0" prefWidth="1000.0" styleClass="shadow-pane" stylesheets="@application.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cs195tennis.controller.ShotTypeController">
    <center>
        <VBox id="dragTarget" spacing="10" styleClass="background-pane">
            <HBox alignment="CENTER">
                <padding>
                    <Insets right="5" top="2" />
                </padding>
                <HBox>
                    <ImageView>
                        <Image url="@TennisShotChart.jpg" />
                    </ImageView>
                </HBox>
                <HBox id="right-icons" alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                    <Button onAction="#handleGitButton" styleClass="git-button" />
                    <Button onAction="#handleExitButtonClicked" styleClass="exit-button" />
                </HBox>
            </HBox>
            <StackPane styleClass="highlight-rectangle">
                <StackPane.margin>
                    <Insets right="11.0" />
                </StackPane.margin>
                <TextField fx:id="searchBox" onAction="#handleSearch" styleClass="transparent">
                    <StackPane.margin>
                        <Insets left="25.0" right="25.0" />
                    </StackPane.margin>
                </TextField>
                <Button mnemonicParsing="false" onAction="#handleClearSearchText" styleClass="delete-button" text="Button" StackPane.alignment="CENTER_RIGHT">
                    <StackPane.margin>
                        <Insets right="23.0" />
                    </StackPane.margin>
                </Button>
                <Button mnemonicParsing="false" styleClass="search-button" text="Button" StackPane.alignment="CENTER_LEFT">
                    <StackPane.margin>
                        <Insets left="9.0" />
                    </StackPane.margin>
                </Button>
                <VBox.margin>
                    <Insets right="14.0" />
                </VBox.margin>
            </StackPane>
            <VBox>
                <TableView fx:id="shotTypeTable" >
                    <columns>
                        <TableColumn fx:id="match_idCol" text="Match Id" />
                        <TableColumn fx:id="playerCol" text="Player"/>
                        <TableColumn fx:id="rowCol" text="Row"/>
                        <TableColumn fx:id="shotsCol" text="Shots Col"/>
                        <TableColumn fx:id="pt_endingCol" editable="false" text="Points Ending"/>
                        <TableColumn fx:id="winnersCol" editable="false" text="Winners "/>
                        <TableColumn fx:id="induced_forcedCol" editable="false" text="Induced Forced Error"/>
                        <TableColumn fx:id="unforcedCol" editable="false" text="Unforced Error"/>
                        <TableColumn fx:id="serve_returnCol" editable="false" text="Serve Return"/>
                        <TableColumn fx:id="shots_in_pts_wonCol" editable="false" text="Shots in Pts Won"/>
                        <TableColumn fx:id="shots_in_pts_lostCol" editable="false" text="Shots in Pts Lost"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
